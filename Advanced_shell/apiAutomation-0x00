#!/bin/bash

# API URL for Pikachu
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Make the API request and handle the response
curl -s -o data.json "$API_URL"

# Check if the request was successful
if [ $? -eq 0 ]; then
    # Check if the response contains valid JSON (simple check)
    if jq empty data.json 2>/dev/null; then
        echo "Successfully retrieved Pikachu data and saved to data.json"
    else
        echo "Error: Invalid JSON response" >> errors.txt
        echo "Failed to get valid Pikachu data. Check errors.txt for details."
    fi
else
    echo "Error: Failed to make API request" >> errors.txt
    echo "Failed to make API request. Check errors.txt for details."
fi